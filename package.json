{
  "name": "scrollinfinite-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Universal infinite scroll library for all modern frameworks",
  "author": "Umut Korkmaz",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run --filter './packages/*' build",
    "test": "vitest",
    "lint": "eslint packages --ext .ts,.tsx",
    "clean": "pnpm run --filter './packages/*' clean",
    "dev": "pnpm run --filter './packages/*' --parallel dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
